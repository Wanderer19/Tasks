<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Properties="clr-namespace:WpfApplication2.Properties" x:Class="WpfApplication2.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid Name="MyGrid">
        <Button Content="Press me :)" HorizontalAlignment="Left" VerticalAlignment="Top" Width="197" Height="122" Foreground="#FF8A9AFF" BorderBrush="#FF461172" Click="Button_Click_1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                    <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                    <GradientStop Color="#FF5353B0" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Image HorizontalAlignment="Left" Height="100" Margin="247,122,0,0" VerticalAlignment="Top" Width="100">
            <Image.DataContext>
                <Properties:Resources/>
            </Image.DataContext>
        </Image>

    </Grid>
</Window>
